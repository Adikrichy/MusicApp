<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/premium_background"
    android:gravity="center"
    android:padding="16dp">

    <!-- Gradient Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Title: "Mua Music Premium..." -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy the Premium Plan to listen to music without ads, without the Internet, and even when the screen is off"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try 1 month for free • Then 2,500 KZT/month VAT not included • Cancel anytime"
            android:textSize="16sp"
            android:textColor="#BBBBBB"
            android:gravity="center"
            android:layout_marginBottom="24dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_try_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try 1 month for free"
            android:textSize="16sp"
            android:background="@drawable/premium_button_background"
            android:backgroundTint="#007AFF"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or save money with the Family or Student plan"
            android:textSize="12sp"
            android:textColor="#BBBBBB"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>